- model_class = Book
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @book.title
%p
  %strong= model_class.human_attribute_name(:publisher) + ':'
  %br
  = @book.publisher
%p
  %strong= model_class.human_attribute_name(:published_on) + ':'
  %br
  = @book.published_on
%p
  %strong= model_class.human_attribute_name(:price) + ':'
  %br
  = @book.price
%p
  %strong= model_class.human_attribute_name(:votes) + ':'
  %br
  = @book.votes
%p
  %strong= model_class.human_attribute_name(:author_id) + ':'
  %br
  = @book.author_id
%p
  %strong= model_class.human_attribute_name(:category_ids) + ':'
  %br
  = @book.category_ids


= link_to t('.back', :default => t("helpers.links.back")), books_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_book_path(@book), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), book_path(@book), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
